<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/dimen_25dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_5dp">

        <TextView
            style="@style/aboutText"
            android:layout_width="wrap_content"
            android:text="@string/leak_name" />

        <EditText
            android:id="@+id/newLeakName"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:importantForAutofill="no"
            tools:targetApi="o"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_5dp">

        <TextView
            style="@style/aboutText"
            android:layout_width="wrap_content"
            android:text="@string/leak_code" />

        <EditText
            android:id="@+id/newLeakCode"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:importantForAutofill="no"
            tools:targetApi="o"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_5dp">

        <TextView
            style="@style/aboutText"
            android:layout_width="wrap_content"
            android:text="@string/leak_period" />

        <EditText
            android:id="@+id/newLeakPeriod"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:targetApi="o"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            style="@style/aboutText"
            android:text="@string/leak_period_unit"/>
    </LinearLayout>
</LinearLayout>